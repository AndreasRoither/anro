{
  "languages": {
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": ["oxfmt", "--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": ["oxfmt", "--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "Astro": {
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "prettier",
            "--plugin",
            "prettier-plugin-astro",
            "--plugin",
            "prettier-plugin-tailwindcss",
            "--parser",
            "astro"
          ]
        }
      },
      "format_on_save": "on"
    }
  }
}
