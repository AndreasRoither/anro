<style>
  /*  Steam wisps  */
  .steam {
    fill: none;
    stroke: currentColor;
    stroke-width: 1.2;
    stroke-linecap: round;
    opacity: 0;
    animation: steamFloat 4s ease-in-out infinite;
  }

  .steam.s1 {
    animation-delay: 0s;
  }
  .steam.s4 {
    animation-delay: 0.7s;
  }
  .steam.s2 {
    animation-delay: 1.3s;
  }
  .steam.s5 {
    animation-delay: 2s;
  }
  .steam.s3 {
    animation-delay: 2.6s;
  }

  @keyframes steamFloat {
    0% {
      opacity: 0;
      transform: translateY(0);
    }
    30% {
      opacity: 0.3;
    }
    70% {
      opacity: 0.2;
    }
    100% {
      opacity: 0;
      transform: translateY(-10px);
    }
  }

  /*  Kintsugi gold shimmer  */
  .kintsugi {
    animation: kintsugiShimmer 6s ease-in-out infinite;
  }
  .kintsugi.k1 {
    opacity: 0.7;
    animation-delay: 0s;
  }
  .kintsugi.k2 {
    opacity: 0.6;
    animation-delay: 2s;
  }
  .kintsugi.k3 {
    opacity: 0.5;
    animation-delay: 4s;
  }

  @keyframes kintsugiShimmer {
    0%,
    100% {
      filter: brightness(1);
    }
    50% {
      filter: brightness(1.5) drop-shadow(0 0 2px rgba(201, 168, 76, 0.3));
    }
  }

  /*  Bowl glow  */
  .bowl-glow {
    opacity: 0.04;
    animation: bowlBreathe 6s ease-in-out infinite;
  }

  @keyframes bowlBreathe {
    0%,
    100% {
      opacity: 0.04;
    }
    50% {
      opacity: 0.08;
    }
  }

  /*  Reduced motion  */
  @media (prefers-reduced-motion: reduce) {
    .steam {
      animation: none;
      opacity: 0.15;
    }
    .kintsugi {
      animation: none;
    }
    .bowl-glow {
      animation: none;
      opacity: 0.06;
    }
  }
</style>
