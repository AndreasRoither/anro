---
import ThemeToggle from "../ThemeToggle.tsx";
import LanguageSwitcher from "../LanguageSwitcher.astro";
import { t, type Lang } from "../../i18n";

interface Props {
  title: string;
  lang?: Lang;
}

const { title, lang } = Astro.props;
---

<div
  class="term-bar sticky top-0 z-3 flex w-full items-center justify-end gap-3 border-b border-(--anro-bar-border) bg-(--anro-bar-bg) px-4 py-[0.4rem]"
>
  <span
    class="term-title pointer-events-none absolute inset-0 flex items-center justify-center truncate px-20 text-[0.8rem] text-(--anro-text-muted) max-[380px]:hidden"
  >
    {title}
  </span>
  {lang && <LanguageSwitcher lang={lang} />}
  <ThemeToggle client:load />
</div>
