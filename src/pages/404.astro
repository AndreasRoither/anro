---
import PageShell from "../components/PageShell.astro";
import TeaBowl from "../components/overview/TeaBowl.astro";
import { defaultLang, t } from "../i18n";
---

<PageShell
  title={`${t(defaultLang, "error.notFound.title")} - ${t(defaultLang, "error.notFound.description")}`}
  termTitle={t(defaultLang, "error.notFound.title")}
  noindex={true}
>
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <TeaBowl />
    <h1
      class="m-0 text-[clamp(4rem,10vw,8rem)] font-bold tracking-tight text-(--anro-accent)"
    >
      {t(defaultLang, "error.notFound.title")}
    </h1>
    <p class="m-0 mt-2 text-[1.05rem] text-(--anro-text-muted)">
      {t(defaultLang, "error.notFound.message")}
    </p>
  </div>
</PageShell>
