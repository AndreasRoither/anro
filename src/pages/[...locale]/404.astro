---
import PageShell from "../../components/PageShell.astro";
import TeaBowl from "../../components/overview/TeaBowl.astro";
import { getLocalePaths, getLang, t } from "../../i18n";

export function getStaticPaths() {
  return getLocalePaths();
}

const { locale } = Astro.params;
const lang = getLang(locale);
---

<PageShell
  title={`${t(lang, "error.notFound.title")} - ${t(lang, "error.notFound.description")}`}
  termTitle={t(lang, "error.notFound.title")}
  noindex={true}
>
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <TeaBowl />
    <h1
      class="m-0 text-[clamp(4rem,10vw,8rem)] font-bold tracking-tight text-(--anro-accent)"
    >
      {t(lang, "error.notFound.title")}
    </h1>
    <p class="m-0 mt-2 text-[1.05rem] text-(--anro-text-muted)">
      {t(lang, "error.notFound.message")}
    </p>
  </div>
</PageShell>
